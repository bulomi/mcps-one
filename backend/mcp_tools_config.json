{
  "proxy_config": {
    "host": "localhost",
    "port": 8000,
    "max_concurrent_tools": 10,
    "tool_timeout": 30,
    "enable_caching": true,
    "cache_ttl": 300,
    "enable_health_check": true,
    "health_check_interval": 30
  },
  "tools": {
    "playwright": {
      "command": "npx -y @playwright/mcp@latest",
      "description": "Playwright MCP server for browser automation",
      "enabled": true
    }
  },
  "default_command_template": "npx -y {tool_name}",
  "description": "MCP工具配置文件 - 中间件代理架构，支持零适配工具集成",
  "version": "2.0.0",
  "last_updated": "2025-01-27"
}